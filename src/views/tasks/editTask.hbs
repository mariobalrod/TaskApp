
<div class="col-md-4 mx-auto" style="margin-top: 150px;">
  <div class="card text-center">
    <div class="card-header">
      <h3>Edit Task</h3>
    </div>
    <div class="card-body">
      <form action="/task/edit/{{task._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="title" value="{{task.title}}" class="form-control" placeholder="Title" autofocus/>
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control" placeholder="Description">{{task.description}}
          </textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>