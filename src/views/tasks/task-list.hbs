
<div class="row" style="margin-top: 80px;">
  {{#if tasks}}
      <a href="/task/add" class="btn btn-success btn-block mx-auto" style="width: 100px;"><i class="fas fa-plus-square"></i></a>
  {{/if}}
</div>
<div class="row" style="margin-top: 10px;">
  {{#each tasks}}
  <div class="col-md-3" style="margin-top: 25px;">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{title}} <a href="/task/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{description}} </p>
        <!-- DELETE REQUEST -->
        <form action="/task/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.username}}</h1>
      <p clsss="lead">There are not Notes yet.</p>
      <a href="/task/add" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>
